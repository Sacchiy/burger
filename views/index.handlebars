<h1>Eat-da-Burger!</h1>

<h2>Burgers To Eat!</h2>

<div class = >
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
      {{this.id}}
      {{this.burger_name}}
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div>
<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      {{this.id}}
      {{this.burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class = >

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="addBurger">Enter a burger you would like to eat!</label>
    <input type="text" id="addBurger" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
</div>