<h1>Eat-da-Burger!</h1>

<h2>Burgers To Eat!</h2>

<div class = >
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
      {{this.id}}
      {{this.burger_name}}
      <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div>
<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      {{this.id}}
      {{this.burger_name}}
      
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div>

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a burger name!</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit</button>
			</form>
</div>
